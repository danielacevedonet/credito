.Cuenta
 & h2
    background #f8f8f8
    color #999
    margin 0
    padding 0.9rem
 & p
   margin 0
 &-radio
   display flex
   justify-content flex-end
   align-items center
   padding 1rem
   & p
     margin-right 0.8rem
 &-input
   margin-top 1.5rem
   display flex
   justify-content flex-start
   div
     padding 0 0.5rem
   div label
     font-size 1.1rem
     font-weight bold
     color black
 &-num
   width 100px
 &-des
   flex 1
 &-campos
   background white
   border 1px solid #e8e8e8
   span.rojo
     color red
   span.verde
     color green
 &-titles
   background #e8e8e8
   display flex
   // justify-content space-between
   justify-content flex-star
   padding 0.6rem
   & h3
     font-size 1.5rem
     margin 0
   & h3.Fecha
     width 120px
   & h3.Cli
     min-width 110px
     max-width 120px
     margin-right 0.6rem
   & h3.Des
     flex 1
 &-bootom
   padding 0 1.4rem
 &-top
   margin 1.4rem
   border 1px solid #e8e8e8
   padding 0.8rem
   display flex
   justify-content space-between
   & .Can
     color blue
     font-size 3rem
   & div
     display flex
     justify-content flex-start
   & p
     margin-right 1rem
 &-cargos
   padding 0.6rem
   display flex
   justify-content flex-star
   font-size 1rem
   border-bottom 1px solid #e8e8e8
   & span.Cli
     min-width 110px
     max-width 120px
     margin-right 0.6rem
   & span.Fecha
     width 120px
   & span.Des
     flex 1
   &:nth-of-type(odd)
     background #f6f6f6
 &-conseptos
   display flex
   justify-content flex-start
   flex-direction column-reverse
 &-Cli
    background green

