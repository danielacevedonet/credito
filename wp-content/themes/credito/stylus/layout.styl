body
  display flex
  min-height 100vh
  flex-direction column
  font-size 16px !important
  background-color #e8e8e8

main
  flex 1 0 auto
  height 100%
  background none

.Layout
  &-footer
    background none
    color black
    text-align center
    padding 1rem 0
    font-size 0.95rem
  &-nav
    padding 0 0.8rem
    box-shadow none !important
  &-nav ul li a, &-nav a.brand-logo
    color black !important
  &-content
    display flex
    justify-content space-between
    height 100vh
    background none
  &-left
    background white
    max-width 260px
    width 30%
    height 100%
    padding 0.7rem
    & li
      list-style-type none
    & a
      background none
      display block
      padding 0.5rem 0
      border-bottom 1px solid #e8e8e8
      &:hover
        padding-left 0.3rem
    & h3
      font-size 1rem
      padding 0.7rem
      margin 0
      background #e8e8e8
  &-right
    padding 2rem
    background none
    flex 1
    display flex
    min-height 100%
    flex-direction column
  &-contenido
    flex 1 0 auto
  &-cuenta, &-contenido, &-footer
    background white

.current_page_item
  background #f1f1f1
  padding-left 0.9rem
